<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AreaInfoFragment">

    <EditText
        android:id="@+id/townDisplayT"
        android:layout_width="148dp"
        android:layout_height="39dp"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        app:layout_constraintBottom_toTopOf="@+id/playerDescriptionDisplayT"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/playerDescriptionDisplayT"
        android:layout_width="183dp"
        android:layout_height="48dp"
        android:layout_marginStart="56dp"
        android:layout_marginLeft="56dp"
        app:layout_constraintBottom_toTopOf="@+id/starredDisplayT"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/starredButton"
        android:layout_width="66dp"
        android:layout_height="50dp"
        android:layout_marginStart="56dp"
        android:layout_marginLeft="56dp"
        android:layout_marginBottom="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="STAR" />

    <EditText
        android:id="@+id/starredDisplayT"
        android:layout_width="182dp"
        android:layout_height="47dp"
        android:layout_marginBottom="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/starredButton" />

    <Button
        android:id="@+id/conButton"
        android:layout_width="78dp"
        android:layout_height="48dp"
        app:layout_constraintBottom_toTopOf="@+id/starredDisplayT"
        app:layout_constraintStart_toEndOf="@+id/playerDescriptionDisplayT"
        android:text="CONFIRM"
        android:textSize="11dp"/>


</android.support.constraint.ConstraintLayout>