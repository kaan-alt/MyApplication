<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StatusBarFragment">

    <EditText
        android:id="@+id/healthDisplay"
        android:layout_width="80dp"
        android:layout_height="38dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:textSize ="12dip"
        android:inputType="none|numberDecimal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/equipmentMassDisplay"
        android:layout_width="80dp"
        android:layout_height="38dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="124dp"
        android:ems="10"
        android:textSize ="12dip"
        android:inputType="numberSigned|numberDecimal"
        app:layout_constraintTop_toTopOf="@id/healthDisplay"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <EditText
        android:id="@+id/cashDisplay"
        android:layout_width="80dp"
        android:layout_height="38dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="72dp"
        android:ems="10"
        android:textSize ="12dip"
        android:inputType="numberSigned|numberDecimal"
        app:layout_constraintTop_toTopOf="@id/equipmentMassDisplay"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/restartButton"
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:text="Restart!"
        android:textSize="8dip"
        app:layout_constraintTop_toTopOf="@id/cashDisplay"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>