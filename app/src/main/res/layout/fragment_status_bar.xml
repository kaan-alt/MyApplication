<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StatusBarFragment">

    <EditText
        android:id="@+id/healthDisplayT"
        android:layout_width="80dp"
        android:layout_height="38dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="none|numberDecimal"
        android:textSize="12dip"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/equipmentMassDisplayT"
        android:layout_width="80dp"
        android:layout_height="38dp"
        android:layout_marginLeft="8dp"
        android:ems="10"
        android:inputType="numberSigned|numberDecimal"
        android:textSize="12dip"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/healthDisplayT" />

    <EditText
        android:id="@+id/cashDisplayT"
        android:layout_width="80dp"
        android:layout_height="38dp"
        android:layout_marginLeft="8dp"
        android:ems="10"
        android:inputType="numberSigned|numberDecimal"
        android:textSize="12dip"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/equipmentMassDisplayT" />

    <Button
        android:id="@+id/restartButton"
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="Restart!"
        android:textSize="8dip"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cashDisplayT" />

    <TextView
        android:id="@+id/winLoseTextView"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:textSize="14dip"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/restartButton" />

</android.support.constraint.ConstraintLayout>